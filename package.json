    "react-native-screens": "^3.29.0",
    "react-native-vision-camera": "^4.7.3",
    "react-native-web": "^0.21.2",
    "react-router-dom": "^7.12.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.28.6",
